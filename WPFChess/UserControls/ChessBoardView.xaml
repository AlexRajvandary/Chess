<UserControl x:Class="ChessWPF.UserControls.ChessBoardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:ChessWPF.ViewModels"
             xmlns:controls="clr-namespace:ChessWPF.Controls"
             xmlns:converters="clr-namespace:ChessWPF.Converters"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance viewModels:MainViewModel, IsDesignTimeCreatable=True}">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:CellColorConverter x:Key="CellColorConverter"/>
    </UserControl.Resources>
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

            <!-- Event and Date (above board, first row) -->
            <TextBlock Grid.Row="0" Grid.Column="2"
                   Text="{Binding DataContext.Game.EventAndDate, RelativeSource={RelativeSource AncestorType=Window}}"
                   FontSize="16"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,5"
                   Visibility="{Binding DataContext.Game.IsHistoricalGameLoaded, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <!-- Black Player Name (above board, second row) -->
            <TextBlock Grid.Row="1" Grid.Column="2"
                   Text="{Binding DataContext.Game.BlackPlayerName, RelativeSource={RelativeSource AncestorType=Window}}"
                   FontSize="16"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,5"
                   Visibility="{Binding DataContext.Game.IsHistoricalGameLoaded, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <!-- Black Player Timer (above board) -->
            <Border Grid.Row="2" Grid.Column="2" 
                Background="#2C3E50" 
                CornerRadius="5" 
                Padding="10,8" 
                Margin="0,0,0,5"
                HorizontalAlignment="Right"
                Visibility="{Binding DataContext.Timer.ShowTimers, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⏱ Black: " 
                           Foreground="White" 
                           FontSize="14" 
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding DataContext.Timer.BlackPlayerTimeFormatted, RelativeSource={RelativeSource AncestorType=Window}}"
                           Foreground="White" 
                           FontSize="16" 
                           FontWeight="Bold"
                           FontFamily="Consolas"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Captured by Black (above board) -->
        <ItemsControl Grid.Row="2" Grid.Column="2" 
                      ItemsSource="{Binding DataContext.CapturedPieces.CapturedByBlack, RelativeSource={RelativeSource AncestorType=Window}}"
                      HorizontalAlignment="Left"
                      Margin="0,0,0,5">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Width="28" Height="28" Margin="2">
                        <Border Width="28" Height="28">
                            <controls:ChessPiece Piece="{Binding Piece}"/>
                        </Border>
                        <TextBlock Text="{Binding DisplayText}" 
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Bottom"
                                   FontSize="9"
                                   FontWeight="Bold"
                                   Margin="0,0,1,1"
                                   Foreground="#333"
                                   Background="#FFFFFF"
                                   Padding="1,0"/>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Top letters -->
        <ItemsControl Grid.Row="3" Grid.Column="2" ItemsSource="{Binding DataContext.Game.Letters, RelativeSource={RelativeSource AncestorType=Window}}" Height="21" HorizontalAlignment="Center">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Width="60">
                        <TextBlock Text="{Binding}" VerticalAlignment="Center" TextAlignment="Center" FontSize="16"/>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>

        <!-- Left numbers -->
        <ItemsControl Grid.Row="4" Grid.Column="1" ItemsSource="{Binding DataContext.Game.Numbers, RelativeSource={RelativeSource AncestorType=Window}}" Width="21" VerticalAlignment="Center">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Height="60">
                        <TextBlock Padding="5,0" Text="{Binding}" VerticalAlignment="Center" TextAlignment="Center" FontSize="16"/>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Chess Board -->
        <ItemsControl Grid.Row="4" Grid.Column="2" ItemsSource="{Binding DataContext.Game.Board, RelativeSource={RelativeSource AncestorType=Window}}" AlternationCount="64">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Width="60" Height="60" Command="{Binding DataContext.Game.CellCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="OverridesDefaultStyle" Value="True"/>
                                <Setter Property="Background" Value="{Binding DataContext.LightSquareColor, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                <Setter Property="BorderBrush" Value="{x:Null}"/>
                                <Setter Property="BorderThickness" Value="2"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate>
                                            <Border Background="{TemplateBinding Background}">
                                                <Border BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                                                    <Grid>
                                                        <controls:ChessPiece Piece="{Binding State}"/>
                                                        <Ellipse Width="20" Height="20" 
                                                                 Fill="#4CAF50" 
                                                                 Opacity="0.6"
                                                                 HorizontalAlignment="Center" 
                                                                 VerticalAlignment="Center"
                                                                 Visibility="{Binding AvailableMove, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                    </Grid>
                                                </Border>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding (ItemsControl.AlternationIndex), RelativeSource={RelativeSource AncestorType=ContentPresenter}, Converter={StaticResource CellColorConverter}}" Value="True">
                                        <Setter Property="Background" Value="{Binding DataContext.DarkSquareColor, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Active}" Value="True">
                                        <Setter Property="BorderBrush" Value="Red"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding AvailableMove}" Value="True">
                                        <Setter Property="BorderBrush" Value="#4CAF50"/>
                                        <Setter Property="BorderThickness" Value="3"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="8" Rows="8"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>

        <!-- Right numbers -->
        <ItemsControl Grid.Row="4" Grid.Column="3" ItemsSource="{Binding DataContext.Game.Numbers, RelativeSource={RelativeSource AncestorType=Window}}" Width="21" VerticalAlignment="Center">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Height="60">
                        <TextBlock Padding="5,0" Text="{Binding}" VerticalAlignment="Center" TextAlignment="Center" FontSize="16"/>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Bottom letters -->
        <ItemsControl Grid.Row="5" Grid.Column="2" ItemsSource="{Binding DataContext.Game.Letters, RelativeSource={RelativeSource AncestorType=Window}}" Height="21" HorizontalAlignment="Center">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Width="60">
                        <TextBlock Text="{Binding}" VerticalAlignment="Center" TextAlignment="Center" FontSize="16"/>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>

        <!-- White Player Name (below board, between board and captured pieces) -->
        <TextBlock Grid.Row="6" Grid.Column="2"
                   Text="{Binding DataContext.Game.WhitePlayerName, RelativeSource={RelativeSource AncestorType=Window}}"
                   FontSize="16"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"
                   Margin="0,5,0,0"
                   Visibility="{Binding DataContext.Game.IsHistoricalGameLoaded, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}"/>

        <!-- White Player Timer (below board) -->
        <Border Grid.Row="7" Grid.Column="2" 
                Background="#2C3E50" 
                CornerRadius="5" 
                Padding="10,8" 
                Margin="0,5,0,0"
                HorizontalAlignment="Right"
                Visibility="{Binding DataContext.Timer.ShowTimers, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⏱ White: " 
                           Foreground="White" 
                           FontSize="14" 
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding DataContext.Timer.WhitePlayerTimeFormatted, RelativeSource={RelativeSource AncestorType=Window}}"
                           Foreground="White" 
                           FontSize="16" 
                           FontWeight="Bold"
                           FontFamily="Consolas"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Captured by White (below board) -->
        <ItemsControl Grid.Row="7" Grid.Column="2" 
                      ItemsSource="{Binding DataContext.CapturedPieces.CapturedByWhite, RelativeSource={RelativeSource AncestorType=Window}}"
                      HorizontalAlignment="Left"
                      Margin="0,5,0,0">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Width="28" Height="28" Margin="2">
                        <Border Width="28" Height="28">
                            <controls:ChessPiece Piece="{Binding Piece}"/>
                        </Border>
                        <TextBlock Text="{Binding DisplayText}" 
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Bottom"
                                   FontSize="9"
                                   FontWeight="Bold"
                                   Margin="0,0,1,1"
                                   Foreground="#333"
                                   Background="#FFFFFF"
                                   Padding="1,0"/>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>

