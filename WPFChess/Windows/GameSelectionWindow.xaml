<Window x:Class="ChessWPF.Windows.GameSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:ChessWPF.Models"
        mc:Ignorable="d"
        Title="Select Game" Height="500" Width="700" 
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <TextBlock Text="ðŸ“‹ Saved Games" FontSize="18" FontWeight="Bold" Foreground="White"/>
        </Border>

        <!-- Games List -->
        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding Games}"
                  SelectedItem="{Binding SelectedGame}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  GridLinesVisibility="All"
                  HeadersVisibility="Column"
                  Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="White" Binding="{Binding WhitePlayer}" Width="120"/>
                <DataGridTextColumn Header="Black" Binding="{Binding BlackPlayer}" Width="120"/>
                <DataGridTextColumn Header="Date" Binding="{Binding CreatedAt, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" Width="150"/>
                <DataGridTextColumn Header="Moves" Binding="{Binding MoveCount}" Width="70"/>
                <DataGridTextColumn Header="Result" Binding="{Binding Result}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons -->
        <Border Grid.Row="2" Background="White" Padding="15" BorderBrush="#DDD" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="1" Content="Load" 
                        Command="{Binding LoadCommand}"
                        Background="#27AE60" 
                        Foreground="White" 
                        Padding="20,8" 
                        Margin="0,0,10,0"
                        FontWeight="Bold"
                        Cursor="Hand"
                        MinWidth="100"/>
                
                <Button Grid.Column="2" Content="Cancel" 
                        Command="{Binding CancelCommand}"
                        Background="#95A5A6" 
                        Foreground="White" 
                        Padding="20,8"
                        FontWeight="Bold"
                        Cursor="Hand"
                        MinWidth="100"/>
            </Grid>
        </Border>
    </Grid>
</Window>
