<Window x:Class="ChessWPF.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessWPF.Windows"
        xmlns:converters="clr-namespace:ChessWPF.Converters"
        mc:Ignorable="d"
        Title="Settings" Height="600" Width="700" ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <converters:ColorSchemeEqualityConverter x:Key="ColorSchemeEqualityConverter"/>
    </Window.Resources>
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20">
            <TextBlock Text="⚙️ Settings" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="30">
            <StackPanel>
                <TextBlock Text="🎨 Color Scheme" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock Text="Choose a color scheme for the chess board. Changes apply immediately!" FontSize="13" Margin="0,0,0,20" Foreground="#555" FontStyle="Italic"/>
                
                <!-- Custom Color Scheme Section -->
                <Border Background="White" BorderBrush="#DDD" BorderThickness="2" CornerRadius="5" Padding="15" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="🎨 Custom Color Scheme" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="Create your own color scheme by selecting colors for light and dark squares:" FontSize="12" Foreground="#666" Margin="0,0,0,15"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Light Square Color:" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <Border Background="{Binding CustomLightColor}" BorderBrush="#CCC" BorderThickness="2" 
                                        Height="50" CornerRadius="3" Margin="0,0,0,5"/>
                            </StackPanel>
                            <Button Grid.Column="1" Content="Choose Color" Padding="15,8" 
                                    Command="{Binding SelectCustomLightColorCommand}" 
                                    Background="#3498DB" Foreground="White" 
                                    BorderThickness="0" FontSize="12" Cursor="Hand" 
                                    VerticalAlignment="Bottom" Margin="0,0,10,0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            CornerRadius="3" Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2980B9"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <StackPanel Grid.Column="2" Margin="10,0,10,0">
                                <TextBlock Text="Dark Square Color:" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <Border Background="{Binding CustomDarkColor}" BorderBrush="#CCC" BorderThickness="2" 
                                        Height="50" CornerRadius="3" Margin="0,0,0,5"/>
                            </StackPanel>
                            <Button Grid.Column="3" Content="Choose Color" Padding="15,8" 
                                    Command="{Binding SelectCustomDarkColorCommand}" 
                                    Background="#3498DB" Foreground="White" 
                                    BorderThickness="0" FontSize="12" Cursor="Hand" 
                                    VerticalAlignment="Bottom">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            CornerRadius="3" Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2980B9"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <ItemsControl ItemsSource="{Binding ColorSchemes}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="2" Rows="5"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <RadioButton GroupName="ColorSchemes" Margin="10" 
                                        Tag="{Binding}"
                                        Checked="ColorSchemeRadioButton_Checked">
                                <RadioButton.IsChecked>
                                    <MultiBinding Converter="{StaticResource ColorSchemeEqualityConverter}">
                                        <Binding Path="DataContext.SelectedColorScheme" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                        <Binding Path="Tag" RelativeSource="{RelativeSource AncestorType=RadioButton}"/>
                                    </MultiBinding>
                                </RadioButton.IsChecked>
                                <RadioButton.Content>
                                    <Border Padding="15" Background="White" 
                                            BorderThickness="2" BorderBrush="#DDD" CornerRadius="5"
                                            Cursor="Hand">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect BlurRadius="0" ShadowDepth="0" Color="Transparent"/>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=RadioButton}}" Value="True">
                                                        <Setter Property="BorderBrush" Value="#3498DB"/>
                                                        <Setter Property="BorderThickness" Value="4"/>
                                                        <Setter Property="Effect">
                                                            <Setter.Value>
                                                                <DropShadowEffect BlurRadius="8" ShadowDepth="0" Color="#3498DB" Opacity="0.6"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Icon}" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                            <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                            <TextBlock Text="{Binding Description}" FontSize="11" TextWrapping="Wrap" 
                                                       HorizontalAlignment="Center" Foreground="#666" TextAlignment="Center" Margin="0,0,0,10"/>
                                            <Grid Height="40" Margin="0,5,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Border Grid.Column="0" Background="{Binding LightSquareColor}" 
                                                        BorderBrush="#CCC" BorderThickness="1" Margin="0,0,2,0"/>
                                                <Border Grid.Column="1" Background="{Binding DarkSquareColor}" 
                                                        BorderBrush="#CCC" BorderThickness="1" Margin="2,0,0,0"/>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </RadioButton.Content>
                                <RadioButton.Style>
                                    <Style TargetType="RadioButton">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="RadioButton">
                                                    <ContentPresenter/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </RadioButton.Style>
                            </RadioButton>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#34495E" Padding="15">
            <Button Content="Close" HorizontalAlignment="Center" Padding="20,8" 
                    Click="ApplyButton_Click" Background="#3498DB" Foreground="White" 
                    BorderThickness="0" FontSize="14" Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="3" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Border>
    </Grid>
</Window>
